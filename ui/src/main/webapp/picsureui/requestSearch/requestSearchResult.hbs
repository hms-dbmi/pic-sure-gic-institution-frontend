<div class="col-md-6 centered-flex-container">
    <div>
        <b>Lead PI: </b>{{requesterEmail}}
    </div>
    <div>
        <b>Data Directory: </b>{{commonAreaID}}
    </div>
    <div style="padding: 5px; margin-bottom: 40px;"><button id="data-request-btn" class="btn btn-outline primary super-rounded">
        <i class="fa-solid fa-file-pdf fa-xl request-result-icon"></i>Data Request Summary</button>
    </div>
    <div style="padding: 5px; margin-bottom: 10px; display: none;"><button id="ids-and-consents-btn" class="btn btn-outline primary">
        <i class="fa-solid fa-file fa-xl request-result-icon"></i>Patient IDs &amp; Consents</button>
    </div>
</div>
<div class="col-md-6 request-result-header">
    <div>
        <label for="query-approved">Approved by {{homeSite.display}} SDAC</label>
    </div>
    <div>
        <input
                type="date" id="query-approved" name="query-approved"
                value="{{approved}}" min="2000-01-01" max="2039-01-18"
        />
    </div>
</div>
{{#if approved}}
    <div id="dataset-request-3" style="width: 100%;">
        <div class="col-md-12">
            <span class="circle-border">3</span>
            <h3 class="header-with-icon" style="display: inline;">Share Patient-Level Data</h3>
        </div>

        <div id="send-data-body">
            <div class="col-md-4 request-result-header">
                <h4 style="display: inline;">Data Storage Location</h4>
                <i id="data-store-help-button" class="fa-regular fa-circle-question" style="margin-left: 5px;"></i>
            </div>
            <div class="col-md-4 request-result-header">
                <h4 style="display: inline;">Send Data to SWB</h4>
            </div>
            <div class="col-md-4 request-result-header">
                <h4 style="display: inline;">Status</h4>
                <button id="refresh-status-btn"><i class="fa-solid fa-arrows-rotate"></i></button>
            </div>
            <div class="col-md-12 centered-flex-container">
                <div class="divider"></div>
            </div>
            <div class="col-md-4 request-result-header">
                {{#if site}}
                    <span>{{site}}</span>
                {{else}}
                    <select id="site-select">
                        {{#each sites}}
                            <option value="{{.}}">{{.}}</option>
                        {{/each}}
                    </select>
                {{/if}}
            </div>
            <div class="col-md-4 request-result-header">
                <button id="upload-data-button" class="super-rounded" {{#if disableUpload}}disabled="disabled"{{/if}}>
                    <h3 class="fa-solid fa-arrow-up-from-bracket request-result-icon"></h3>
                    Send patient level data
                </button>
            </div>
            <div class="col-md-4 request-result-header">
                <div>
                    <i class="fa-solid {{genomicStatusIcon}} request-result-icon"></i> Genomic Data: {{genomicStatus}}
                </div>
                <div>
                    <i class="fa-solid {{phenotypicStatusIcon}} request-result-icon"></i> Phenotypic Data: {{phenotypicStatus}}
                </div>
            </div>
        </div>
    </div>
{{/if}}
